<!DOCTYPE html>
<html>
<head>
  <title>VotoComoVamos</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container canvas">
    <% if flash[:notice] %>
      <div class="alert-message success">
        <%= h flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:error] %>
      <div class="alert-message error">
        <%= h flash[:error] %>
      </div>
    <% end %>

    <%= yield %>
  </div>
</body>
</html>
